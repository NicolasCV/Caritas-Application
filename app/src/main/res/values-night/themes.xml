<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Caritas" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#009CA6</item>
        <item name="colorPrimaryVariant">#009CA6</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#003B5C</item>
        <item name="colorSecondaryVariant">#003B5C</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--
        <item name="android:windowBackground">#D1E0D7</item>
        <item name="android:windowBackground">#888B8D</item>
        -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/raleway</item>

    </style>
    <style name="Theme.Caritas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Caritas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Caritas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>